{
	"name": "scratch-project-guides",
	"version": "0.0.1",
	"type": "module",
	"scripts": {
		"dev": "npm run generate-projects && vite dev",
		"build": "npm run generate-projects && vite build",
		"prepare": "svelte-kit sync",
		"preview": "npm run generate-projects && vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"format": "prettier --write .",
		"lint": "prettier --check . && eslint .",
		"test:e2e": "playwright test",
		"test": "npm run test:e2e",
		"licenses": "npx generate-license-file --input package.json --output third-party-licenses.txt --overwrite",
		"generate-projects": "node scripts/generate-projects.js"
	},
	"devDependencies": {
		"@playwright/test": "^1.51.1",
		"@sveltejs/adapter-static": "^3.0.8",
		"@sveltejs/kit": "^2.20.4",
		"@sveltejs/vite-plugin-svelte": "^5.0.3",
		"@tailwindcss/postcss": "^4.1.3",
		"autoprefixer": "^10.4.21",
		"eslint": "^9.24.0",
		"eslint-config-prettier": "^10.1.1",
		"eslint-plugin-svelte": "^3.5.1",
		"generate-license-file": "^4.0.0",
		"globals": "^16.0.0",
		"markdown-it": "^14.1.0",
		"prettier": "^3.5.3",
		"prettier-plugin-svelte": "^3.3.3",
		"prettier-plugin-tailwindcss": "^0.6.11",
		"scratchblocks": "^3.6.4",
		"svelte": "^5.25.8",
		"svelte-check": "^4.1.5",
		"tailwindcss": "^4.0.6",
		"typescript": "^5.8.3",
		"typescript-eslint": "^8.29.1",
		"vite": "^6.2.5"
	}
}
